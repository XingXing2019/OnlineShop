@page
@model Shop.UI.Pages.Admin.StockModel
@{
}

<div id="app">
    <div class="columns">
        <div class="column is-3">
            <table class="table">
                <tr @@click="selectProduct(product)" v-for="product in products">
                    <td>{{product.description}}</td>
                </tr>
            </table>
        </div>
        <div class="column is-6">
            <table class="table" v-if="selectedProduct">
                <tr v-for="stock in selectedProduct.stocks">
                    <td><input class="input" v-model="stock.description"/></td>
                    <td><input class="input" v-model="stock.qty"/></td>
                </tr>
                <a class="button is-warning" @@click="updateStock">Update Products</a>
            </table>
        </div>
        <div class="column is-3">
            <h2 class="title">New Stock</h2>
            <div class="field">
                <div class="control">
                    <input class="input" v-model="newStock.description" />
                </div>
            </div>
            <div class="field">
                <div class="control">
                    <input class="input" v-model="newStock.qty" />
                </div>
            </div>
            <a class="button is-success" @@click="addStock">Add Stock</a>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="js/admin/stock.js"></script>
}
